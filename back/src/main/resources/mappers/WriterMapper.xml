<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gardener.writer.WriterMapper">
 
 <!-- 작가신청하기 -->
  <insert id="insertWriter" parameterType="int">
    INSERT INTO writer (writerId, writerType)
    VALUES (#{id}, 1)
  </insert>
  
  <!-- 작가신청 취소하기 -->
  <delete id="cancelWriter" parameterType="int">
  DELETE FROM writer
  WHERE writerId = #{id}
  </delete>
</mapper>