<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gardener.member.MemberMapper">

 <select id="selectByLoginId" parameterType="map" resultType="com.gardener.member.dto.Member">
        SELECT loginId, pwd, email, name, intro, profile
        FROM member
        WHERE LOGINID = #{loginId}
    </select>
    
    <select id="selectById" resultType="Member" parameterType="string">
    SELECT * FROM member WHERE loginid= #{loginid}
    </select>
 
 <update id="updateMember" parameterType="com.gardener.member.dto.Member">
    UPDATE member
    SET pwd = #{pwd},
    email = #{email},
    name = #{name},
    intro = #{intro},
    profile = #{profile}         
    WHERE id = #{id}
</update>

 <delete id="deleteMember" parameterType="String">
	DELETE FROM member WHERE LOGINID = #{loginId}
    </delete>

</mapper>